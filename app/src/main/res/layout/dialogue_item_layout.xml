<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    >

    <ImageView
        android:id="@+id/dialogueLogoView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/dialogueTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:text="DialogueName"
        app:layout_constraintStart_toEndOf="@+id/dialogueLogoView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialogueLastMessageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="text"
        app:layout_constraintStart_toEndOf="@+id/dialogueLogoView"
        app:layout_constraintTop_toBottomOf="@+id/dialogueTitleView" />
</androidx.constraintlayout.widget.ConstraintLayout>